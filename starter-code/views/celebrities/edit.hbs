<form action="/celebrities/{{celeb.id}}/edit" method="post">
    <label for="name">Name</label>
    <input class="form-control" type="text" name="name" id="" value="{{celeb.name}}">
    <label for="occupation">Occupation</label>
    <input class="form-control" type="text" name="occupation" id="" value="{{celeb.occupation}}">
    <label for="catchPhrase">Catchphrase</label>
    <input class="form-control" type="text" name="catchPhrase" id="" value="{{celeb.catchPhrase}}">
    <button type="submit">Save changes</button>
</form>
